        xmlns:local="clr-namespace:JourneyControl"
        mc:Ignorable="d"
        Title="Clockify" Height="600" Width="400">
    <Grid>
        <!-- Main Content Area -->
        <StackPanel Margin="10,10,10,10">

            <StackPanel>
                <Button Height="40" Content="PAUSAR" Background="OrangeRed" Foreground="White" FontWeight="Bold" />
            </StackPanel>

            <!-- Today Summary -->
            <StackPanel Margin="0,20,0,0">
                <TextBlock Text="Hoje" FontSize="16" FontWeight="Bold" />
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Total de Hoje: " FontSize="14" Margin="0,0,0,10"/>
                    <TextBlock Name="TodayTotal" Text="00:00:00" FontSize="14" Margin="0,0,0,10"/>
                </StackPanel>
            </StackPanel>

            <!-- Last Week Summary -->
